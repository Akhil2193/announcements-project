<%- include('header'); -%>
    <title>Announcements</title>
    </head>

    <body>
        <!-- navbar section start  -->
        <%- include('navbar'); -%>
            <!-- navbar section ends  -->
            <!-- video section starts  -->
            <div id="intro-page">
                <video autoplay loop id="myVideo">
                    <source src="css/video/campus.mp4" type="video/mp4">
                    Your browser does not support HTML5 video.
                </video>

                <div class="head-content" class="container-fluid" class="flex-container">
                    <div id="inner-intro">
                        <h1 class="ml1" class="heading">
                            <span class="text-wrapper">
                                <span class="line line1"></span>
                                <span text-align="center;">
                                    <span class="letters">BITS GOA</span>
                                </span>
                                <span class="line line2"></span>
                            </span>
                        </h1>

                        <h1 class="ml12">ANNOUNCEMENTS</h1>


                        <button id="myBtn" onclick="myFunction()">Pause</button>
                    </div>
                </div>
            </div>
            <!-- video section ends  -->
            <!-- event-announcer section starts  -->
            <% var size=users.length %>
                <section id="event-announcer">
                    <div class="event-card-container">
                        <% for(var i=0; i< users.length; i++) { %>
                            <div class="event-card" id="<%=`${i.toString()}card` %>">
                                <div class="event-card-img">
                                    <img src="<%= users[i].croppedImage %>" alt="image not found"
                                        onerror=this.src="css/event_announcer/poster-background.jpeg">
                                </div>
                                <div class="event-card-content">
                                    <div class="event-card-content-items" id="event-card-content-items-title"><img
                                            src="css/event_announcer/right-arrow.png" alt=""
                                            id="event-card-content-items-title-img">
                                        <span>
                                            <%= users[i].fname %>
                                        </span>
                                    </div>
                                    <br><br><br>
                                    <div class="event-card-content-items"><img
                                            src="https://img.icons8.com/ios/50/000000/calendar--v2.png" />
                                        <%= users[i].lname %>
                                    </div>
                                    <div class="event-card-content-items"><img
                                            src="https://img.icons8.com/android/24/000000/time.png" />
                                        <%= users[i].etime %>
                                    </div>
                                    <div class="event-card-content-items" id="event-card-content-items-link"><a
                                            href="<%= users[i].elink %>" target="_blank" rel="noopener noreferrer"><img
                                                src="https://img.icons8.com/material-rounded/96/000000/link--v1.png" /></a>
                                    </div>
                                </div>
                            </div>
                            <div id="<%= `${JSON.stringify(i)}description` %>" class="event-card-description-container"
                                style="display: none;">
                                <img src="css/event_announcer/close.png" alt="" class="event-description-close">
                                <div class="event-card-description-title">Title</div>

                                <img src="<%= users[i].originalImage %>" alt="">
                                <div class="event-card-description-details">
                                    <div><img src="https://img.icons8.com/ios/50/000000/calendar--v2.png" />
                                        <%= users[i].lname %>
                                    </div>
                                    <div><img src="https://img.icons8.com/android/24/000000/time.png" />
                                        <%= users[i].etime %>
                                    </div>
                                    <div><a href="<%= users[i].elink %>" target="_blank" rel="noopener noreferrer"><img
                                                src="https://img.icons8.com/material-rounded/96/000000/link--v1.png" /></a>
                                    </div>
                                </div>
                                <div class="event-card-description-desc">
                                    <%= users[i].edesc %>
                                </div>


                            </div>
                            <% } %>
                    </div>
                </section>
                <script>
                    var size = parseInt('<%=size%>');
                    $(document.body).on('click', '.event-description-close', function () {

                        console.log("close button was clicked");
                        $('.event-card-description-container').css('display', 'none');
                        $('.event-card').css('display', 'block');
                        for (var i = 0; i < size; i++) {
                            $('#' + i.toString() + 'card').css('display', 'block');
                        }
                    })
                    for (var i = 0; i < size; i++)(function (i) {

                        $('#' + i.toString() + 'card').on('click', function () {
                            $('.event-card').css('display', 'none');
                            $('#' + i.toString() + 'description').css('display', 'flex');
                        });
                    })(i);
                </script>
                <!-- event-announcer section ends  -->
                <%- include('footer') -%>